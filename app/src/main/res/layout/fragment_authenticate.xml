<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layoutshape"
    tools:context="mr.gov.sidialiapp.fragments.LeftFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout7"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginTop="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:id="@+id/card"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/login_bk_color"
                    android:focusableInTouchMode="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"

                        android:contentDescription="Photo"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/softgyellow"
                android:text="charger l'image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.503">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leftlittlefinger"
            android:layout_width="30dp"
            android:layout_height="140dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="60dp"
            android:enabled="false"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="@+id/leftring"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/softgyellow"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/leftring"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leftring"
            android:layout_width="30dp"
            android:layout_height="160dp"
            android:enabled="false"
            android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:backgroundTint="@color/softgyellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/leftlittlefinger"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leftmiddlefinger"
            android:layout_width="30dp"
            android:layout_height="160dp"
            android:enabled="false"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:backgroundTint="@color/softgyellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/leftring"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leftindexfinger"
            android:layout_width="30dp"
            android:layout_height="160dp"
            android:enabled="false"
            android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:backgroundTint="@color/softgyellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/leftmiddlefinger"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/leftThumbfinger"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:enabled="false"
            android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:backgroundTint="@color/softgyellow"
            app:layout_constraintBottom_toBottomOf="@+id/leftindexfinger"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/leftindexfinger"
            app:layout_constraintTop_toBottomOf="@+id/leftindexfinger"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hand"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:backgroundTint="@color/softgyellow"
            app:layout_constraintEnd_toStartOf="@+id/leftThumbfinger"
            app:layout_constraintStart_toEndOf="@+id/leftlittlefinger"
            app:layout_constraintTop_toBottomOf="@+id/leftmiddlefinger" />

        <ImageView
            android:id="@+id/leftfinger"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftlittlefinger" />

        <ImageView
            android:id="@+id/leftfinger2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@+id/leftfinger"
            app:layout_constraintTop_toBottomOf="@+id/leftlittlefinger" />

        <ImageView
            android:id="@+id/leftfinger3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@+id/leftfinger2"
            app:layout_constraintTop_toBottomOf="@+id/leftlittlefinger" />

        <ImageView
            android:id="@+id/leftfinger4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftfinger" />

        <ImageView
            android:id="@+id/leftfinger5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@+id/leftfinger4"
            app:layout_constraintTop_toBottomOf="@+id/leftfinger3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        android:backgroundTint="@color/softgyellow"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout5"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.502">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rightthumbfinger"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:backgroundTint="@color/softgyellow"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="@+id/rightindex"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rightindex"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rightindex"
            android:layout_width="30dp"
            android:layout_height="160dp"
            android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:enabled="false"
            android:backgroundTint="@color/softgyellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/rightthumbfinger"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rightmiddlefinger"
            android:layout_width="30dp"
            android:layout_height="160dp"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:enabled="false"
            android:backgroundTint="@color/softgyellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/rightindex"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rightringfinger"
            android:layout_width="30dp"
            android:layout_height="160dp"
            android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:enabled="false"
            android:backgroundTint="@color/softgyellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/rightmiddlefinger"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/rightlittle"
            android:layout_width="30dp"
            android:layout_height="140dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:enabled="false"
            android:backgroundTint="@color/softgyellow"
            app:layout_constraintBottom_toBottomOf="@+id/rightringfinger"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/rightringfinger"
            app:layout_constraintTop_toBottomOf="@+id/rightringfinger"
            app:layout_constraintVertical_bias="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/righthand"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:backgroundTint="@color/softgyellow"
            app:layout_constraintEnd_toStartOf="@+id/rightlittle"
            app:layout_constraintStart_toEndOf="@+id/rightthumbfinger"
            app:layout_constraintTop_toBottomOf="@+id/rightmiddlefinger" />

        <ImageView
            android:id="@+id/rightfinger"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rightlittle" />

        <ImageView
            android:id="@+id/rightfinger2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@+id/rightfinger"
            app:layout_constraintTop_toBottomOf="@+id/rightlittle" />

        <ImageView
            android:id="@+id/rightfinger3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@+id/rightfinger2"
            app:layout_constraintTop_toBottomOf="@+id/rightlittle" />

        <ImageView
            android:id="@+id/rightfinger4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rightfinger5"
            app:layout_constraintTop_toBottomOf="@+id/rightfinger2"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/rightfinger5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rightfinger" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:background="@color/coldarkgrey"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:text="Identifier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="12dp"
        android:enabled="false"
        android:text="Vider"
        android:textColor="@color/white"

        android:background="@color/coldarkgrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toEndOf="@+id/identify"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Switch
        android:id="@+id/lefthandswitch"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="main gauche"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/coldarkgrey"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Switch
        android:id="@+id/righthandswitch"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="main droite"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:background="@color/coldarkgrey"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayoutnni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">

        <EditText
            android:id="@+id/editnni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nni"

            android:background="@color/white"
            android:inputType="number"
            android:layout_marginBottom="20dp"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>